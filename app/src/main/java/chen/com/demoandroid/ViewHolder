
public class ViewHolder extends RecyclerView.ViewHolder {
  //    SparseArray类似HaspMap不过比HashMap节省空间，方法都差不多，id和控件对应
  private SparseArray<View> mViews;
  private View mConvertView;

  public ViewHolder(View itemView) {
    super(itemView);
    mViews = new SparseArray<View>();
    mConvertView = itemView;
  }

  //根据id和内容进行摆放
  public void setText(int viewId, String msg) {
    TextView textView = getView(viewId);
    textView.setText(msg);
  }

  //根据id和内容进行摆放
  public void setImg(Context context, int viewId, String path) {
    ImageView imgView = getView(viewId);
    //Bitmap bitmap = BitmapFactory.decodeFile(path);
    //imgView.setImageBitmap(bitmap);
    Glide.with(context).load(path).centerCrop().into(imgView);
  }

  /**
   * 通过viewId获取控件
   */
  public <T extends View> T getView(int viewId) {
    View view = mViews.get(viewId);
    if (view == null) {
      view = mConvertView.findViewById(viewId);
      mViews.put(viewId, view);
    }
    return (T) view;
  }
}
